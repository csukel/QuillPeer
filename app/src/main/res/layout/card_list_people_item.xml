<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardProfilePicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardcolor"
        android:layout_margin="10dp"
        android:elevation = "100dp"
        card_view:cardCornerRadius="8dp"


        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"

            android:padding="6dip">

            <ImageView
                android:id="@+id/imgPeopleProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="6dip"
                android:src="@drawable/ic_action_person" />

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/txtPeoplePersonalDetails"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Title Name Surname" />
                <TextView
                    android:id="@+id/txtPeopleDepartment"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="Department" />

                <TextView
                    android:id="@+id/txtPeopleUniversity"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="University" />



            </LinearLayout>
            <ImageView
                android:id="@+id/imgPeopleFavourite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_star_white"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>