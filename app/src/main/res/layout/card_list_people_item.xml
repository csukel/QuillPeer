<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardProfilePicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardcolor"
        android:layout_margin="5dp"
        android:elevation = "100dp"
        card_view:cardCornerRadius="4dp"


        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:padding="2dip">

            <ImageView
                android:id="@+id/imgPeopleProfilePic"
                android:layout_width="256px"
                android:layout_height="256px"
                android:layout_marginRight="6dip"
                android:src="@drawable/ic_action_person" />

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/txtPeoplePersonalDetails"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Title Name Surname" />
                <TextView
                    android:id="@+id/txtPeopleDepartment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Department" />

                <TextView
                    android:id="@+id/txtPeopleUniversity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="University" />

                <TextView
                    android:id="@+id/txtPeopleQualification"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Qualification" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >

                <ImageView
                    android:id="@+id/imgPeopleFavourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_white"
                    android:layout_weight="0.5"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/corr_indicator_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@color/black"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="8dp"
                    />

                </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>